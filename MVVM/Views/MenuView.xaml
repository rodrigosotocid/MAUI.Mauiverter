<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="MAUI.Mauiverter.MVVM.Views.MenuView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    Title="MenuView"
    NavigationPage.HasNavigationBar="False">

    <ContentPage.Resources>
        <Color x:Key="AppColor1">#10002b</Color>
        <Color x:Key="AppColor2">#240046</Color>
        <Color x:Key="AppColor3">#3c096c</Color>
        <Color x:Key="AppColor4">#5a189a</Color>
        <Color x:Key="TextColor">White</Color>
    </ContentPage.Resources>

    <Grid ColumnDefinitions=".33*, .33*, .33*" RowDefinitions=".1*, .3*, .3*,.3*">
        <Label
            Grid.ColumnSpan="3"
            BackgroundColor="{StaticResource AppColor4}"
            FontAttributes="Bold"
            FontSize="Large"
            HorizontalTextAlignment="Center"
            Text="- MAUIVERTER -"
            TextColor="{StaticResource TextColor}"
            VerticalTextAlignment="Center" />
    </Grid>

</ContentPage>